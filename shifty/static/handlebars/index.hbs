<div class='panel right frontpage_box'>
<h3><i>Neste arrangement i Escape</i></h3>
<table>
{{#each upcomingEvents }}
	<tr>
	<th><div class='bar'> </div></th>
	<th><a href="/event/{{ id }}">{{ title }}</a></th>
	</tr>
	<tr>
	<td colspan='2'>{{formatDate start "dddd D. MMMM YYYY"}}</td>
	</tr>
{{/each}}
</table>
</div>

