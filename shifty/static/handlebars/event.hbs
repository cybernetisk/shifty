{{#each data}}

<div class='event'>
	<h2>{{ formatDate event.start "l j. F Y" }} - {{ event.title }}</h2>
  	{{#each columns}}
  		<column>
			{{#each this}}
			<div class="shift {{ shift.cssClass }} {{ shift.durationType }}" id="shift_{{ shift.id }}">
				<div class='title'>
					{{ shift.shift_type.title }}
					{{#if hasTwins }}
						({{twinsCount}})
					{{/if}}
				</div>
				<div class='time'>{{ formatDate shift.start "H:i" }}-{{ shift.stop }}</div>

                <div class='reveal-modal take_shift small'>
                    <h2>Ta skift: {{shift.type}}</h2>
                    <hr/>
                    <span class='date'>{{ formatDate ../../event.start "l j. F Y" }}</span>
                    <span class='time'>{{ formatDate shift.start "H:i" }}-{{ formatDate shift.stop "H:i" }}</span>

                    <table>
                        <tr>
                            <td class='{{ shift.cssClass }} shift_header'>1</td>
                            <td>
                                Navn<br>
                                <input type="text" name="name">
                            </td>
                            <td>
                                Kommentar<br>
                                <input type="text" name="comment" size="27">
                            </td>
                        </tr>
                        <tr>
                            <td class='{{ shift.cssClass }} shift_header'>2</td>
                            <td>
                                Navn<br>
                                <input type="text" name="name">
                            </td>
                            <td>
                                Kommentar<br>
                                <input type="text" name="comment" size="27">
                            </td>
                        </tr>
                    </table>
                    
                    <a class="close-reveal-modal">&#215;</a>
                </div>        
			</div>

			{{/each}}
		</column>
  	{{/each}}
  	<column>
		<div class='comments'>
			<div class='title'>Kommentarer</div>
			{{ event.description }}
		</div>
	</column>		
</div>

{{/each}}