<div class='event'>
	<h2>{{ event.start }} - {{ event.title }}</h2>
  	{{#each columns}}
  		<column>
			{{#each this}}
			<div class="shift {{ shift.cssClass }} {{ shift.durationType }}" id="shift_{{ shift.id }}">
				<div class='title'>
					{{ shift.type }}
					{{#if twins }}
						({{twins}})
					{{/if}}
				</div>
				<div class='time'>{{ shift.start }}-{{ shift.stop }}</div>

                <div class='reveal-modal take_shift small'>
                    {{ this.event.type }}
                    <h2>Ta skift</h2>
                    {{shift.type}} {{ shift.start }}-{{ shift.stop }}
                    <table class='take_shift'>
                        <tr>
                            <td class='{{ shift.cssClass }} shift_header'>1</td>
                            <td>
                                Navn<br>
                                <input type="text" name="name">
                            </td>
                            <td>
                                Kommentar<br>
                                <input type="text" name="comment">
                            </td>
                        </tr>
                    </table>
                    
                    <a class="close-reveal-modal">&#215;</a>
                </div>        
			</div>

			{{/each}}
		</column>
  	{{/each}}
  	<column>
		<div class='comments'>
			<div class='title'>Kommentarer</div>
			{{ event.description }}
		</div>
	</column>		
</div>