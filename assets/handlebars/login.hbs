{{!
input variables:
* username (optional)
}}
<div class='reveal-modal new_user small' data-reveal>
    <h2>Login</h2>

    <form data-abide method="post">
        <div class="row">
            <div class="small-12">
                <div class="row">
                    <div class="small-4 columns">
                        <label for="right-label-1" class="right inline">Brukernavn</label>
                    </div>
                    <div class="small-8 columns">
                        <input type="text" name="username" class="field-username" id="right-label-1" placeholder="Username" required pattern="[a-z0-9]{4,15}" value="{{username}}">
                        <small class="error">Brukernavnet må være mellom 4 og 15 tegn med a-z0-9.</small>
                    </div>
                </div>
                <div class="row">
                    <div class="small-4 columns">
                        <label for="right-label-2" class="right inline">Passord</label>
                    </div>
                    <div class="small-8 columns">
                        <input type="password" name="password" class="field-name" id="right-label-2" placeholder="Password" required>
                        <small class="error">Passord må man ha.</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center">
            <input type="button" class='button small new_user' value="New user">
            <input type="submit" class='button small success login' value="Login">
        </div>
    </form>

    <a class="close-reveal-modal">&#215;</a>
</div>        
